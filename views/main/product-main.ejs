 <% layout('layout') -%>
 <div class="jumbotron" id="navbar-gap">
    <div class="container">
        <h1>Find your favourite products</h1>
        <p>Search many of ShopSmart Products</p>
        <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <div class="input-group col-md-12">
                        <input type="text" id="search" class="form-control input-lg" name="Search_term" placeholder="Search your favorite products">
                        <span class="input-group-btn">
                            <button type="submit" class="btn btn-primary btn-lg"><i class="glyphicon glyphicon-search"></i></button>
                        </span>
                    </div>
                </div>
        </div>
    </div>
 </div>


<div class="container">

    <div class="row" id="searchResults">
        <% for(var i=0; i < products.length; i++) {%>
         <div class="col-md-4">
			<a href="/product/<%= products[i]._id %>">
				<div class="thumbnail">
					<img src="<%= products[i].image %>">
				
				<div class="caption">
					<h3><%= products[i].name %></h3>
					<p><%= products[i].category.name %></p>
					<p>R<%= products[i].price %></p>
				</div>
                </div>
			</a>
		</div>
        <% } %>

      
    </div>
</div>

<div class="container">
      <div class="pagination text-center">
            <li>
            <% for(var i =1; i <= pages; i++){ %>
                <%if(i===1){%>
                    <li><a href="/"><%= i %></a></li>
               <% } else {%>
                 <li><a href="/page/<%= i %>"><%= i %></a></li>
                    <%}%>
            <%} %>
            </li>
        </div>
</div>